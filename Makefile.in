# @configure_input@

# Package
package     := @PACKAGE_NAME@
version     := @PACKAGE_VERSION@
tarname     := @PACKAGE_TARNAME@

# Directories
prefix      := @prefix@
exec_prefix := @exec_prefix@
bindir      := @bindir@
srcdir      := @srcdir@
distdir     := dist
tardir      := $(tarname)-$(version)

# Tools
CXX         := @CXX@
INSTALL     := @INSTALL@
MKDIR       := mkdir -p
CP          := cp
TAR         := tar

# Compiler options
CPPFLAGS    := @CPPFLAGS@
CXXFLAGS    := @CXXFLAGS@
INCLUDES    := -I$(srcdir)
DEFS        := @DEFS@
DEPS_CFLAGS := @DEPS_CFLAGS@
CXXOPTS     := $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) $(DEFS) $(DEPS_CFLAGS)

# Linker options
LDFLAGS     := @LDFLAGS@
LIBS        := @LIBS@
DEPS_LIBS   := @DEPS_LIBS@
LDOPTS      := $(LDFLAGS) $(LIBS) $(DEPS_LIBS)

# Files
tarfile     := $(tarname)-$(version).tar.gz
objects     := Picker.o Sphere.o WindowAdapter.o \
               BlendNode.o BlendNodeUnmarshaller.o \
               BooleanAndNode.o BooleanAndNodeUnmarshaller.o \
               BooleanXorNode.o BooleanXorNodeUnmarshaller.o \
               SortNode.o SortNodeUnmarshaller.o

# Program
.PHONY: all
all: gander
gander: gander.cxx $(objects)
	@$(CXX) $< $(CXXOPTS) -o $@ $(objects) $(LDOPTS)
%.o: %.cxx %.h
	@$(CXX) $< $(CXXOPTS) -c -o $@
BlendNodeUnmarshaller.o: BlendNode.h
BooleanAndNodeUnmarshaller.o: BooleanAndNode.h
BooleanXorNodeUnmarshaller.o: BooleanXorNode.h
SortNodeUnmarshaller.o: SortNode.h

# Clean up
.PHONY: clean distclean maintainer-clean
clean:
	@$(RM) gander
	@$(RM) *.o
	@$(RM) -r *.dSYM
	@$(RM) -r dist
distclean: clean
	@$(RM) config.h
	@$(RM) config.log
	@$(RM) config.status
	@$(RM) Makefile
maintainer-clean: distclean
	@$(RM) aclocal.m4
	@$(RM) -r autom4te.cache
	@$(RM) autoscan.log
	@$(RM) configure.scan
	@$(RM) config.guess
	@$(RM) config.h.in
	@$(RM) config.h.in~
	@$(RM) config.sub
	@$(RM) configure
	@$(RM) install-sh
	@$(RM) -r m4

# Installation
.PHONY: install uninstall
install:
	$(INSTALL) gander $(bindir)
uninstall:
	$(RM) $(bindir)/gander

# Distribution
.PHONY: dist
dist: gander
	$(MKDIR) $(tardir)
	$(CP) *.h $(tardir)
	$(CP) *.cxx $(tardir)
	$(CP) HACKING $(tardir)
	$(CP) INSTALL $(tardir)
	$(CP) LICENSE $(tardir)
	$(CP) Makefile.in $(tardir)
	$(CP) NEWS $(tardir)
	$(CP) NOTICE $(tardir)
	$(CP) README $(tardir)
	$(CP) config.guess $(tardir)
	$(CP) config.h.in $(tardir)
	$(CP) config.sub $(tardir)
	$(CP) configure $(tardir)
	$(CP) install-sh $(tardir)
	$(MKDIR) $(distdir)
	$(TAR) -czf $(distdir)/$(tarfile) $(tardir)
	$(RM) -r $(tardir)
